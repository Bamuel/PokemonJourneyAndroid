<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.bamuel.pokemonjourney.Startup">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:srcCompat="@drawable/bg_afternoon"
                android:id="@+id/Backgroundimage" android:scaleType="fitXY"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:srcCompat="@drawable/bg_afternoon"
                android:id="@+id/Backgroundimage2" android:scaleType="fitXY"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/a1"
                android:id="@+id/Potagonistloadup" android:scaleType="fitXY"
                android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp"
                android:layout_marginBottom="60dp"
                android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
    </RelativeLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:weightSum="1">
        <Button
                android:text="Continue\n\t\tPlayer = x\n\t\tSteps = y"
                android:gravity="top"
                android:textAlignment="textStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/ContinueGame" android:layout_weight="0.30"/>
        <Button
                android:text="New Game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/NewGame"/>
    </LinearLayout>

</RelativeLayout>
