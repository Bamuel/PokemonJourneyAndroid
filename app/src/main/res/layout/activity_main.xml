<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.bamuel.pokemonjourney.MainActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/bg_day"
                android:id="@+id/imageBG"
                android:scaleType="fitXY"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/bg_day"
                android:id="@+id/imageBG2"
                android:scaleType="fitXY"/>
    </RelativeLayout>
    <TextView
            android:text="A username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtviewUsername" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:text="Steps : 0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnStep"
                android:layout_alignParentTop="true" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:enabled="false"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true">

        <Button
                android:text="Click to Move"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnClick"
                android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/a1" android:id="@+id/Potagonist"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:layout_above="@+id/btnClick" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
    </RelativeLayout>
</RelativeLayout>
